@page
@model M_CHAT.Pages.INICIAR_SESIONModel
@{
    ViewData["Title"] = "INICIAR_SESION";
}

<h1>Iniciar Sesion</h1>
<p>
    <div class="card" style="width: 30rem;">
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <img id="profile-img" class="profile-img-card" src="~/Images/Login.png" />
                <div class="form-group">
                    <br />
                    <div class="form-group">
                        <label for="Email" class="text-uppercase">Correo electronico</label>
                        <input type="text" name="email" value="" placeholder="Escribir email" class="form-control" required />
                    </div>

                    <div class="form-group">
                        <label for="Contraseña" class="text-uppercase">Contraseña</label>
                        <input type="password" name="contraseña" value="" placeholder="Escribir Contraseña" class="form-control" required />
                    </div><br />
                    <div class="d-flex justify-content-end">
                        <a asp-page="/Index" class="btn btn-danger m-1">Cancelar</a>
                        <a asp-page="/Cuestionario" class="btn btn-outline-info m-1">Iniciar Sesion</a>
                    </div>
                </div>
            </li>
        </ul>
    </div>
